@model Capstone_Project.ViewModel.SurveyViewModel

@{
    ViewBag.Title = "Create a Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Survey</h2>

@using (@Html.BeginForm("Save", "Survey")) // The "using" block will create an ending "</form> tag for us
{
    <div class="form-group">
        @Html.LabelFor(m => m.Survey.Name)
        @Html.TextBoxFor(m => m.Survey.Name, new { @class = "form-control", placeholder = "Survey Name" })
        @Html.ValidationMessageFor(m => m.Survey.Name)
    </div>

    <div id="options" class="form-group">
        @Html.LabelFor(m => m.Options)
        @Html.TextBoxFor(m => m.Options, new { @class = "form-control", placeholder = "Option" })
        @Html.ValidationMessageFor(m => m.Options)
    </div>

    @Ajax.ActionLink("Add an option", "AddOption", new { @class = "btn btn-primary" }, new AjaxOptions
{
    UpdateTargetId = "options",
    InsertionMode = InsertionMode.InsertBefore,
    HttpMethod = "GET"
})




}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script> 
    