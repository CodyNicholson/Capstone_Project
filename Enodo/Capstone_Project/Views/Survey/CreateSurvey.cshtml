@model Capstone_Project.Models.Survey

@{
    ViewBag.Title = "Create a Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Survey</h2>

@using (@Html.BeginForm("Save", "Survey")) // The "using" block will create an ending "</form> tag for us
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div id="options" class="form-group">
        @Html.LabelFor(m => m.Directions)
        @Html.TextBoxFor(m => m.Directions, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Directions)
    </div>

    @Ajax.ActionLink("Add an option", "AddOption", new { @class = "btn btn-primary" }, new AjaxOptions
    {
        UpdateTargetId = "options",
        InsertionMode = InsertionMode.InsertBefore,
        HttpMethod = "GET"
    })
    <br /><br />
    <button type="submit" class="btn btn-primary">Preview</button>    <button type="submit" class="btn btn-primary">Save</button>



}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script> 
    