@model IEnumerable<Capstone_Project.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Users</h2>
@if (!Model.Any())
{
    <p>We don't have any Users yet.</p>
}
else
{
    <table id="users" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Membership Type</th>
                <th>Delete User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.ActionLink(user.Name, "Edit", "Users", new {id = user.Id}, null)</td>
                    @if (@user.IsResearcher)
                    {
                        <td>Researcher</td>
                    }
                    else
                    {
                        <td>Standard User</td>
                    }
                    <td>
                        <button data-user-id="@user.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p><a class="btn btn-primary" href="/Users/New">Create User</a></p>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#users').on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function(result) {
                    if (result) {
                        $.ajax({
                            url: "/api/user/" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });
        });
    </script>
}
