@model IEnumerable<Capstone_Project.Models.Survey>

@{
    ViewBag.Title = "Results";
    ViewBag.Message = "This is the page where you can view your results compared against everyone else who has taken the survey.";
}
<h2>@ViewBag.Title</h2>
<p>@ViewBag.Message</p>

<hr/>

    <table id="results" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Survey</th>
                <th>Owner</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#results').DataTable({
                ajax: {
                    url: "/api/results",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function (data, type, result) {
                            return "<a href='/results/showresults/" + result.surveyid + "'>" + result.id + "</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, result) {
                            return result.id;
                        }
                    }
                ]
            });
        });
    </script>
}
